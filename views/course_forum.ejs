<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Course Forum</title>
  <style>
    body { font-family: Arial, sans-serif; background: #f1f1f1; margin:0; padding:0; }
    .forum-container { max-width: 800px; margin: 20px auto; padding: 10px; background: #fff; border-radius: 10px; }
    .bubble { padding: 10px 15px; border-radius: 15px; margin: 5px 0; display: inline-block; max-width: 70%; word-wrap: break-word; background-color: #007bff; color: white; }
    .post { margin-bottom: 10px; }
    .post strong { display: block; margin-bottom: 5px; }
  </style>
</head>
<body>
  <div class="forum-container">
    <h2>Course Discussion Forum</h2>

    <% posts.forEach(post => { %>
      <div class="post">
        <div class="bubble">
          <strong><%= post.full_name %>:</strong>
          <%= post.content %>
        </div>
      </div>
    <% }); %>

    <!-- Form to add a new post -->
    <form action="/course/<%= courseId %>/forum" method="POST" style="margin-top:20px;">
      <textarea name="content" placeholder="Type your message..." required style="width:100%; height:70px; padding:5px; border-radius:5px;"></textarea>
      <button type="submit" style="margin-top:5px; padding:5px 10px; border-radius:5px; background-color:#007bff; color:white; border:none; cursor:pointer;">Post</button>
    </form>
  </div>
</body>
</html>
