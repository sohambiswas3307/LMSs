<h1>Welcome, <%= user.full_name %> (Teacher)</h1>

<h2>Create a New Course</h2>
<form action="/create-course" method="post">
  Title: <input type="text" name="title" required><br>
  Description: <textarea name="description" required></textarea><br>
  Duration: <input type="text" name="duration" required><br>
  <button type="submit">Create Course</button>
</form>

<h2>Your Courses and Enrolled Students</h2>
<% if(coursesWithStudents.length > 0){ %>
  <% coursesWithStudents.forEach(course => { %>
    <div style="border:1px solid black; padding:10px; margin:10px 0;">
      <strong><%= course.title %></strong> - <%= course.duration %><br>
      <%= course.description %><br>

      <h4>Enrolled Students:</h4>
      <% if(course.students.length > 0){ %>
        <ul>
          <% course.students.forEach(student => { %>
            <li><%= student.full_name %> - <%= student.email %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No students enrolled yet.</p>
      <% } %>
    </div>
  <% }) %>
<% } else { %>
  <p>You have not created any courses yet.</p>
<% } %>

