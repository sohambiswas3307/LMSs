<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attempt Quiz - <%= quiz.title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    .container {
      max-width: 800px;
      margin: auto;
    }
    .question {
      border: 1px solid #ccc;
      padding: 15px;
      margin-bottom: 15px;
      border-radius: 5px;
    }
    .timer {
      position: fixed;
      top: 20px;
      right: 20px;
      font-size: 18px;
      font-weight: bold;
      background: #f0f0f0;
      padding: 8px 12px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border-radius: 5px;
      border: none;
      background-color: #4CAF50;
      color: white;
    }
    button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="timer">
    Time: <span id="timer">00:00</span>
  </div>

  <div class="container">
    <h1>Quiz: <%= quiz.title %></h1>

    <form id="quizForm" action="/practice/quiz/<%= quiz.id %>/submit" method="POST">
      <!-- Hidden field to store time taken in seconds -->
      <input type="hidden" name="timeTaken" id="timeTaken" value="0">

      <% questions.forEach(q => { %>
        <div class="question">
          <p><strong>Q<%= q.id %>: </strong><%= q.question_text %></p>
          <label><input type="radio" name="<%= q.id %>" value="A"> <%= q.option_a %></label><br>
          <label><input type="radio" name="<%= q.id %>" value="B"> <%= q.option_b %></label><br>
          <label><input type="radio" name="<%= q.id %>" value="C"> <%= q.option_c %></label><br>
          <label><input type="radio" name="<%= q.id %>" value="D"> <%= q.option_d %></label><br>
        </div>
      <% }); %>

      <button type="submit">Submit Quiz</button>
    </form>
  </div>

  <script>
    let seconds = 0;
    const timerEl = document.getElementById('timer');
    const timeInput = document.getElementById('timeTaken');

    const interval = setInterval(() => {
      seconds++;
      const mins = Math.floor(seconds / 60);
      const secs = seconds % 60;
      timerEl.textContent = `${mins.toString().padStart(2,'0')}:${secs.toString().padStart(2,'0')}`;
      timeInput.value = seconds;
    }, 1000);

    document.getElementById('quizForm').addEventListener('submit', () => {
      clearInterval(interval); // stop timer on submit
    });
  </script>
</body>
</html>
